doctype html
html
    head
        title VIKING
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.min.css')
        link(rel='stylesheet', href='/css/styles.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
        script(src='/bootstrap/js/bootstrap.min.js')
    body.login-bg
        .header
            .container
                .row
                    .col-md-12
                        // Logo
                        .logo
                            h1
                                a(href='index.html') VIKING
        .page-content.container
            .row
                .col-md-4.col-md-offset-4
                    .login-wrapper
                        .box
                            .content-wrap
                                h6.caption Đăng ký
                                form(role='form', action="/register",method="post", style='max-width: 300px;')
                                    .form-group
                                        input.form-control(type='text',name="fullname", placeholder='Họ tên')
                                    .form-group
                                        input.form-control(type='text', name="username", placeholder='Nhập tên đăng nhập')
                                    .form-group
                                        input.form-control(type='password',name="password", placeholder='Mật khẩu')
                                    //.form-group
                                    //    input.form-control(type='password', placeholder='Xác nhận mật khẩu')
                                    .form-group
                                        input.form-control(type='text',name="email", placeholder='Địa chỉ email')
                                    .form-group
                                        input.form-control(type='text',name="phone", placeholder='Số điện thoại')
                                    .form-group
                                        input.form-control(type='text',name="leaderPhone", placeholder='Người giới thiệu')
                                    button.btn.btn-info(type='submit') Đăng ký
                                //&nbsp;
                                //a(href='/')
