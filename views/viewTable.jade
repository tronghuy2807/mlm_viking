    body
        .header
            .container
                .row
                    .col-md-5
                        // Logo
                        .logo
                            h1
                                a(href='index.html') VIKING
                    .col-md-2
                        //p #{user}
                        //a(href="/logout") Đăng xuất
        .page-content
            .row
                .col-md-3
                    .sidebar.content-box
                        ul.nav
                            // Main menu
                            li.home
                                a(href="/home")
                                    i.glyphicon.glyphicon-home
                                    |  Thông báo
                            li.current
                                a.dropdown-submenu(href='#', data-toggle='dropdown')
                                    i.glyphicon.glyphicon-list
                                    | Thông tin
                                    b.caret
                                ul.dropdown-submenu
                                    li
                                        a(href='/viewTable') Dạng bảng
                                    li
                                        a(href='/viewTree') Dạng cây
                .col-md-9
                    .row
                        .content-box-large
                                    .panel-title Danh sách nhà đầu tư
                                    .panel-body
                                        table.table.table-striped
                                            thead
                                                tr
                                                    th Họ tên
                                                    th Địa chỉ email
                                                    th Số điện thoại
                                                    th Người giới thiệu
                                            tbody
                                                each d in JSON.parse(data)
                                                    tr
                                                        td #{d.fullname}
                                                        td #{d.email}
                                                        td #{d.phone}
                                                        td #{d.leaderPhone}

        footer
            .container
                .copy.text-center
                    | Viking 2016
                    a(href='#') Website
        script(src='https://code.jquery.com/jquery.js')
